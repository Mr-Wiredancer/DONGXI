<div class="dx-container" style="text-align:center; margin-bottom: 20px;">
  <ul class="banner">
    <% for step in %w(info story owner submit) %>
      <li style="display:inline-block; margin-right: 20px;">
      <%= link_to t("projects.#{step}"), edit_project_path(@project, step: step), class: "editable", data: { step: "#{step}" } %>
    <% end %>
    <% unless @project.new_record? %>
      <li style="display:inline-block;"><%= link_to '预览', preview_project_path(@project) %>
    <% end %>
  </ul>
</div>
