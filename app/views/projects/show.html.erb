<div class="dx-container project">
  <div class="title">
    <h1><%= @project.try(:name) || "项目名称" %></h1>
    <p>由<%= @project.try(:owner_name) || "免费午餐团队" %>发起</p>
  </div>

  <div class="meta">
    <!-- FIXME WITH ICONS! -->
    <span>地区：<%= @project.try(:region_name) || 'xx省xx市' %></span>
    <span>类别：<%= @project.try(:category_name) || "公益 教育" %></span>
  </div>

  <div class="content">
    <div class="pull-left information dx-u-7-10">
      <div class='wrap'>
        <%= render_project_video(@project) %>
        <%= render_project_introduction(@project) %>
      </div>
    </div>
    <div class="pull-left sns-share dx-u-3-10">
      <div class='wrap'>
        <%= render_project_status(@project) %>
        <%= render_project_weibo(@project) %>
        <% if user_signed_in? %>
        <!-- TODO: remind user to fill in the form -->
        <!-- WARNING: how to know whether the user fill-in the form but didn't donate actually? -->
          <%= render_donate_box(@project) %>
          <%= render_donate_form(@project) %>
        <% end %>
      </div>
    </div>
  </div>

<!--<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>-->

<%= content_for :weibo_meta do %>
  <meta property="og:type" content="webpage" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:title" content="<%= @project.try(:basic_info).try(:name) %>" />
  <meta property="og:description" content="<%= @project.try(:story).try(:introduction).try(:strip) %>" />
  <meta property="og:image" content="<%= @project.try(:basic_info).try(:photo) %>" />
  <meta name="weibo:webpage:create_at" content="2013-11-07 09:12:56 +0800" />
  <meta name="weibo:webpage:update_at" content="2013-11-07 10:30:16 +0800" />
<% end %>
