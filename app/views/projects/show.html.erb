<div class="dx-container">
<p>
  <b>Name:</b>
  <%= @project.try(:basic_info).try(:name) %>
</p>

<p>
  <b>Slogan:</b>
  <%= @project.try(:basic_info).try(:slogan) %>
</p>

<p>
  <b>Introduction:</b>
  <%= @project.try(:story).try(:introduction) %>
</p>

<p>
  <b>Risk:</b>
  <%= @project.try(:story).try(:risk) %>
</p>
<div>
  <%= image_tag @project.basic_info.photo.url(:normal) if @project.try(:basic_info).try(:photo).nil? %>
</div>
<div>
  <%= image_tag @project.owner.avatar.url(:normal) unless @project.try(:owner).try(:avatar).nil? %>
</div>


<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<% if @status %>
<div style="margin-top: 20px;">
  <div style="border: 1px solid #000; width: 600px;">
    <p><%= @status["user"]["screen_name"] %></p>
    <p><%= @status["text"] %></p>
    <span><%= "转发(#{@status["reposts_count"]})" %></span>
    <span><%= "评论(#{@status["comments_count"]})" %></span>
  </div>
</div>
