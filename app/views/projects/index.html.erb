<h1>Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Slogan</th>
    <th>Introduction</th>
    <th>Risk</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.try(:basic_info).try(:name) %></td>
    <td><%= project.try(:basic_info).try(:slogan) %></td>
    <td><%= project.try(:story).try(:introduction) %></td>
    <td><%= project.try(:story).try(:risk) %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

