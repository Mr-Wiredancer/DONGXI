<h1>所有用户</h1>

<table>
  <tr>
    <td>姓名</td>
    <td>邮箱</td>
    <td>微博uid</td>
    <td></td>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.weibo_id %></td>
    <td>
      <%= link_to '查看', cpanel_user_path(user) %>
      <%= link_to '修改', edit_cpanel_user_path(user) %>
      <%= link_to '删除', cpanel_user_path(user), method: :delete, data: { confirm: '确定删除用户?' } %>
    </td>
  </tr>
<% end %>
</table>

