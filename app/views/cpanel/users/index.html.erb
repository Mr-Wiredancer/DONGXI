<h1>所有用户</h1>

<table>
  <tr>
    <td>Name</td>
    <td>Email</td>
    <td>Weibo-Auth-Uid</td>
    <td></td>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %>
    <td><%= user.email %>
    <td><%= user.authorizations.find_by_provider("weibo").try(:uid) %>
    <td>
      <%= link_to '查看', cpanel_user_path(user) %>
      <%= link_to '修改', edit_cpanel_user_path(user) %>
      <%= link_to '删除', cpanel_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

